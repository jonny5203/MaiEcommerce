@model ProductVM;

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-primary py-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <!-- 
        This is a form for Creating categories and put it in the db, with server side validation 
        and changed encoding method to allow images to be sent to the server
        -->
        <form method="post" class="row" enctype="multipart/form-data">
            <!-- 
                Hidden id to post to the server, cause if not those values won't be sent in the post request
             -->
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <!-- TODO: Maybe create this with a loop instead for more
                        automation and consistency for future updates on code or datatable
                        -->

                        <!-- Sum all Validation errors -->
                        @* <div asp-validation-summary="All"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Title" class="form-control border-0 shadow"/>
                            <label asp-for="Product.Title" class="ms-2 text-dark"></label>

                            <!-- display validation error text under the input field -->
                            <!-- this is for server and client side -->
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>

                        <div class="py-2 col-12">
                            <label asp-for="Product.Description" class="ms-2 text-dark text-muted"></label>
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ISBN" class="form-control border-0 shadow"/>
                            <label asp-for="Product.ISBN" class="ms-2 text-dark"></label>

                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Author" class="form-control border-0 shadow"/>
                            <label asp-for="Product.Author" class="ms-2 text-dark"></label>

                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ListPrice" class="form-control border-0 shadow"/>
                            <label asp-for="Product.ListPrice" class="ms-2 text-dark"></label>

                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price" class="form-control border-0 shadow"/>
                            <label asp-for="Product.Price" class="ms-2 text-dark"></label>

                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price50" class="form-control border-0 shadow"/>
                            <label asp-for="Product.Price50" class="ms-2 text-dark"></label>

                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price100" class="form-control border-0 shadow"/>
                            <label asp-for="Product.Price100" class="ms-2 text-dark"></label>

                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow"/>
                            <label asp-for="Product.ImageUrl" class="ms-2 text-dark"></label>
                        </div>

                        <div class="form-floating py-2 col-12">

                            <!-- Create dropdown with a viewmodel that binds to this view -->
                            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Product.CategoryId" class="ms-2 text-dark"></label>

                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>


                    </div>
                </div>
                
                <!--
                    for showcasing the image
                -->
                <div class="col-2">
                    <img src="@Model.Product.ImageUrl" width="100%"
                         style="border-radius: 5px; border: 1px solid #bbb9b9" />
                </div>
            </div>
            
        </form>
    </div>
</div>

<!-- Adding the validation scripts as a partial view of this file -->
@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount checklist mediaembed casechange formatpainter pageembed tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss markdown',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist | emoticons',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}