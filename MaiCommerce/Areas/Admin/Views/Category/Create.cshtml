@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-primary py-2">Create Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <!-- This is a form for Creating categories and put it in the db, with server side validation -->
        <form method="post" class="row">
            <div class="border p-3">
                <!-- Sum all Validation errors -->
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow"/>
                    <label asp-for="Name" class="ms-2 text-dark"></label>
                    
                    <!-- display validation error text under the input field -->
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow"/>
                    <label asp-for="DisplayOrder" class="ms-2 text-dark"></label>

                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

<!-- Adding the validation scripts as a partial view of this file -->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}